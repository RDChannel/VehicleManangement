@model IEnumerable<VehicleManangement.Models.Address>

@{
    ViewData["Title"] = "Index";
}

<h1>Address Index</h1>
<div class="AddressSelecter"></div>
<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary">+ Add</button></a>
</p>
<table class="table panel-body table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplexNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplexName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComplexNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComplexName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @item.Country?.Name
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary"><i class="bi bi-pencil-square" data-bs-toggle="tooltip" title="Edit this item"></i></button></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-warning"><i class="bi bi-eye" data-bs-toggle="tooltip" title="View this item"></i></button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger"><i class="bi bi-trash" data-bs-toggle="tooltip" title="Delete this item"></i></button></a>
            </td>
        </tr>
}
    </tbody>
</table>
